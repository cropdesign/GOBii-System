    <!--**************** Add data sources to manager *********************************-->
    <bean id="dataSourceMulti" class="org.gobiiproject.gobiiweb.DataSourceSelector">
        <property name="targetDataSources">
            <map key-type="java.lang.String">
                <entry key="#{T(org.gobiiproject.gobiimodel.types.GobiiCropType).DEV.toString()}" value-ref="dataSourceDev"/>
                <entry key="#{T(org.gobiiproject.gobiimodel.types.GobiiCropType).TEST.toString()}" value-ref="dataSourceTest"/>
                <entry key="#{T(org.gobiiproject.gobiimodel.types.GobiiCropType).RICE.toString()}" value-ref="dataSourceRice"/>
                <entry key="#{T(org.gobiiproject.gobiimodel.types.GobiiCropType).WHEAT.toString()}" value-ref="dataSourceWheat"/>
                <entry key="#{T(org.gobiiproject.gobiimodel.types.GobiiCropType).MAIZE.toString()}" value-ref="dataSourceMaize"/>
                <entry key="#{T(org.gobiiproject.gobiimodel.types.GobiiCropType).SORGHUM.toString()}" value-ref="dataSourceSorghum"/>
                <entry key="#{T(org.gobiiproject.gobiimodel.types.GobiiCropType).CHICKPEA.toString()}" value-ref="dataSourceChickpea"/>
            </map>
        </property>
        <!-- <property name="defaultTargetDataSource" ref="concreteDataSourceOne"/> -->
    </bean>

    <bean id="entityManagerFactory"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSourceMulti"/>
        <property name="packagesToScan" value="org.gobiiproject.gobiidao.entity"/>
        <property name="mappingResources" value="META_INF/mapping.xml"/>
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter"/>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
    </bean>
    <tx:annotation-driven/>

    <bean id="persistenceExceptionTranslationPostProcessor"
